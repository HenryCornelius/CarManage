{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
<div class="container">
    <h1>Voiture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Modèle</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ car.year }}</td>
            </tr>
            <tr>
                <th>Carburant</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ car.color }}</td>
            </tr>
            <tr>
                <th>Places assises</th>
                <td>{{ car.placesNumber }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ car.updatedAt ? car.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ car.status }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary mt-3" href="{{ path('app_car_index') }}">Retour à ma liste</a>

    <a class="btn btn-warning mt-3" href="{{ path('app_car_edit', {'id': car.id}) }}">Modifier</a>

    {{ include('car/_delete_form.html.twig') }}
</div>

{% endblock %}
